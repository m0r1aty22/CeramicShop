@model CeramicShop.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "Quên mật khẩu";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card login-card animate__animated animate__fadeIn">
            <div class="card-header text-center">
                <h4 class="mb-0">Quên mật khẩu</h4>
            </div>
            <div class="card-body">
                <p class="text-center mb-4">Nhập địa chỉ email của bạn để nhận mã OTP đặt lại mật khẩu</p>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" required>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i> Gửi mã OTP
                        </button>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Quay lại đăng nhập
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
