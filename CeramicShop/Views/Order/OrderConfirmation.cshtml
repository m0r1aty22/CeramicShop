@model CeramicShop.Models.ViewModels.OrderViewModel

@{
    ViewBag.Title = "Order Confirmation";
}

<div class="order-confirmation-container">
    <div class="text-center mb-5">
        <div class="confirmation-icon">
            <i class="fas fa-check-circle fa-5x text-success"></i>
        </div>
        <h1 class="mt-4">Thank You for Your Order!</h1>
        <p class="lead">Your order has been placed successfully.</p>
        <p>Order #@Model.OrderID</p>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Order Details</h5>
                    <span class="badge bg-primary">@Model.OrderStatus</span>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Order Information</h6>
                            <p class="mb-1"><strong>Order ID:</strong> #@Model.OrderID</p>
                            <p class="mb-1"><strong>Date:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                            <p class="mb-1"><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                            <p class="mb-1"><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("0.00")</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Shipping Address</h6>
                            <p>@Model.ShippingAddress</p>
                        </div>
                    </div>

                    <h6>Order Items</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="/Images/@item.ImagePath" alt="@item.ProductName" class="order-item-image me-2">
                                                <span>@item.ProductName</span>
                                            </div>
                                        </td>
                                        <td>$@item.UnitPrice.ToString("0.00")</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.TotalPrice.ToString("0.00")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td><strong>$@Model.TotalAmount.ToString("0.00")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("TrackOrders", "Order")" class="btn btn-outline-primary me-2">
                    <i class="fas fa-list"></i> View All Orders
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="fas fa-home"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>