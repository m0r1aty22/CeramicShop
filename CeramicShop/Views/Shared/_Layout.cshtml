        $('.modal').on('shown.bs.modal', function () {
            $('.modal-backdrop').remove();
            $('body').removeClass('modal-open'); // Ngăn cản cuộn bị khoá
            $('body').css('padding-right', '0'); // Fix lỗi layout bị lệch
        });
    });
